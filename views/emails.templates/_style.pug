

style.
  *{
    box-sizing: border-box;
    margin: 0;
    padding: 0;
    padding-inline: 0;
    margin-inline: 0;
  }
  a, button{
    font-size: inherit;
    font-family: inherit;
    font-weight: inherit;
    text-decoration: none;
    cursor: pointer;
  }
  html{
    font-size: 62.5%;
  }
  @media (min-width: 600px){
    html{
      font-size: 82%;
    }
  }
  @media (min-width: 1024px){
    html{
      font-size: 100%;
    }
  }
  body{
    font-family: sans-serif;
    font-weight: 400;
    font-size: inherit;
  }
  .block{
    display: block;
  }
  .paragraph{
    display: block;
    text-align: left;
    line-height: 1.5;
    font-size: 1.3rem;
  }
  .table, .th, .td{
    border: 1px solid currentColor;
    border-collapse: collapse;
  }
  .capitalize{
    text-transform: capitalize;
  }
  .uc{
    text-transform: uppercase;
  }
  .text-center{
    text-align: center;
  }
  .text-lg{
    font-size: 1.5rem
  }
  .text-md{
    font-size: 1.2rem;
  }
  .text{
    font-size: 1rem;
  }
  .bold-6{
    font-weight: 600;
  }
  .mx-sm{
    margin-left: .5rem;
    margin-right: .5rem;
  }
  .mx-md{
    margin-left: .8rem;
    margin-right: .8rem;
  }
  .my-lg{
    margin-top: 2.5rem;
    margin-bottom: 2.5rem;
  }
  .button{
    width: max-content;
    padding: 1rem 1.2rem;
  }
